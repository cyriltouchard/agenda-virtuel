{
  "apps": [{
    "name": "agenda-backend",
    "script": "server.js",
    "cwd": "./",
    "watch": true,
    "ignore_watch": ["node_modules", "logs"],
    "env": {
      "NODE_ENV": "development",
      "PORT": "5000"
    },
    "log_file": "./logs/pm2.log",
    "error_file": "./logs/error.log",
    "out_file": "./logs/out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "restart_delay": 1000,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}